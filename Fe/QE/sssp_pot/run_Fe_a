#!/bin/sh
####################################################################
#
# output in results_Fe_afm1/
#

temp=./tmp
pseudo=.
bin=$HOME/QE/bin

if [ ! -d results_Fe_a ]; then
   mkdir  results_Fe_a
fi
if [ ! -d $temp ]; then
   mkdir  $temp
fi
rm -rf $temp/*

# self-consistent calculation
cat > fe_a.scf.in << EOF
 &control
    pseudo_dir = '$pseudo',
    outdir='$temp'
    prefix='fe_a',
 /
 &system
    ibrav=  0, nat=  4, ntyp= 2,
    ecutwfc = 30.0, ecutrho = 300.0,
    occupations='smearing', smearing='mv', degauss=0.02,
    nspin=2, 
    nbnd = 16,
    starting_magnetization(1)= 1, starting_magnetization(2)=-1,
 /
 &electrons
    mixing_beta = 0.3 
 /
CELL_PARAMETERS angstrom
 4.053843 0.000000 0.000000
 0.000000 4.053843 0.000000 
 0.000000 0.000000 2.866500
ATOMIC_SPECIES
 Fe  1.   Fe.pbe-spn-kjpaw_psl.0.2.1.UPF
 Fe1 1.   Fe.pbe-spn-kjpaw_psl.0.2.1.UPF
ATOMIC_POSITIONS crystal
 Fe   0.00  0.00  0.00
 Fe   0.50  0.50  0.00
 Fe1  0.50  0.00  0.50 
 Fe1  1.00  0.50  0.50
K_POINTS automatic
16 16 16 0 0 0
EOF
$bin/pw.x < fe_a.scf.in  > results_Fe_a/fe_a.scf.out


